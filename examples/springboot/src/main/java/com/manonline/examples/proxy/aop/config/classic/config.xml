<?xml version="1.0" encoding="utf-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
       http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

    <!-- 被代理对象 ： 实际业务bean -->
    <bean id="app" class="com.manonline.examples.proxy.aop.config.App"/>

    <!-- 通知Bean -->
    <bean id="advice" class="com.manonline.examples.proxy.aop.config.classic.MyMethodAdvice"/>

    <!-- 代理对象 ：程序中用到的对象, e.g. userService -->
    <bean id="proxyFactoryBean" class="org.springframework.aop.framework.ProxyFactoryBean">
        <!-- 被代理的接口 -->
        <property name="proxyInterfaces">
            <list>
                <value>com.manonline.examples.proxy.aop.config.IApp</value>
            </list>
        </property>
        <!-- 目标类 -->
        <property name="target" ref="app"></property>>
        <!--
            Advice对象 ：也即增强的功能。织入方法的位置，要看advice实现什么样的接口
            MethodBeforeAdvice, MethodInteceptor, AfterReturningAdvice, ThrowsAdvice
        -->
        <property name="interceptorNames">
            <list>
                <value>advice</value>
            </list>
        </property>
    </bean>

</beans>